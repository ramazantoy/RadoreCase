<!DOCTYPE html>
<html lang="tr">

<style>
    body {
            background-image: url("/images/background.png");
            background-repeat: no-repeat;
            background-size: cover;
        }
        #dummyText{
         font-size: 22px; 
        position: relative; 
          top: 5px; 
        }
</style>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RadoreCaseRamazan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">RadoreCaseRamazan</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AccountSettings">Hesap İşlemleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/RemoveAccount">Hesap Silme</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/GetAccountData">Ayrıntılı Hesap Bilgileri</a>
                    </li>
                       
                </ul>
                   <p id="dummyText">a fool as fallen</p>
        
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>


</html>
<script>
   const textElement = document.getElementById("dummyText");
       const text = textElement.textContent;
       const colors = ["red", "green", "blue", "orange"]; // Renk listesi
   
       let i = 0; // Renk indeksi
   
       setInterval(() => {
           const color = colors[i];
           textElement.style.color = color; // Metnin rengini güncelle
           i = (i + 1) % colors.length; // Renk indeksini güncelle
       }, 500); // Her 500 milisaniyede bir renkleri güncelle
</script>